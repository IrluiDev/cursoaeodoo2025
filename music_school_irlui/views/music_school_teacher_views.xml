<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="music_school_irlui_teacher_action" model="ir.actions.act_window">
        <field name="name">Teacher</field>
        <field name="res_model">music.school.teacher</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            Create your first teacher
        </p>
        </field>
    </record>
    <record id="music_school_irlui_teacher_view_list" model="ir.ui.view">
        <field name="name">music.school.teacher.irlui.view.list</field>
        <field name="model">music.school.teacher</field>
        <field name="arch" type="xml">
            <list multi_edit="1" string="Teachers">
                <field name="name"/>
                <field name="email" optional="show"/>
                <field name="phone" optional="show"/>
                <field name="level"/>
                <field name="birthdate" optional="show"/>
            </list>
        </field>
    </record>
    <record id="music_school_irlui_teacher_view_form" model="ir.ui.view">
        <field name="name">music.school.teacher.irlui.view.form</field>
        <field name="model">music.school.teacher</field>
        <field name="arch" type="xml">
            <form string="Teachers">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Teacher"/>
                        </h1>
                        <group>
                            <group>
                                <field name="email"/>
                                <field name="phone"/>
                            </group>
                            <group>
                                <field name="birthdate"/>
                            </group>
                        </group>
                    </div>
                    <group>
                        <group>
                            <field name="level"/>
                        </group>

                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- vista search-->
    <record id="music_school_irlui_teacher_view_search" model="ir.ui.view">
        <field name="name">music.school.teacher.irlui.view.search</field>
        <field name="model">music.school.teacher</field>
        <field name="arch" type="xml">
            <search>
                <filter string="Level" name="level_filter" domain="[('level', '=', 'beginner')]" context="{'group_by': 'level'}"/>
            </search>
        </field>
    </record>
</odoo>