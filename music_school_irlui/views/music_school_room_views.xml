<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="music_school_irlui_room_action" model="ir.actions.act_window">
        <field name="name">Room</field>
        <field name="res_model">music.school.room</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            Create your first room
        </p>
        </field>
    </record>
    <record id="music_school_irlui_room_view_list" model="ir.ui.view">
        <field name="name">music.school.room.irlui.view.list</field>
        <field name="model">music.school.room</field>
        <field name="arch" type="xml">
            <list multi_edit="1" string="Rooms">
                <field name="name"/>
                <field name="capacity"/>
                <field name="location"/>
            </list>
        </field>
    </record>
    <record id="music_school_irlui_room_view_form" model="ir.ui.view">
        <field name="name">music.school.room.irlui.view.form</field>
        <field name="model">music.school.room</field>
        <field name="arch" type="xml">
            <form string="Rooms">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Room"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="location"/>
                            <field name="capacity"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>